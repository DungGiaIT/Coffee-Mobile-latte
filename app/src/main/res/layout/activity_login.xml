<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFF3E0">

    <!-- App Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_user"
        android:layout_marginBottom="24dp"
        android:contentDescription="User Icon"/>

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COFFEE SHOP"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#3E2723"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập hệ thống"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:layout_marginBottom="32dp"/>

    <!-- Input Field using TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Nhập mã nhân viên"
        app:boxStrokeColor="#5D4037"
        app:hintTextColor="#5D4037"
        app:startIconDrawable="@drawable/ic_badge"
        app:startIconTint="#5D4037"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="16dp"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_login"
        app:iconGravity="textStart"
        app:iconTint="#FFFFFF"/>

    <!-- Loading indicator (initially hidden) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:indeterminateTint="#4CAF50"/>

    <!-- Footer text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ quản lý nếu quên mã nhân viên"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

</LinearLayout>