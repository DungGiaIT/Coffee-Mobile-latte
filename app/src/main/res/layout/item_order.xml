<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    app:cardCornerRadius="16dp" 
    app:cardElevation="4dp" 
    app:cardUseCompatPadding="true" 
    android:layout_marginBottom="12dp" 
    android:layout_marginStart="8dp" 
    android:layout_marginEnd="8dp" 
    app:strokeWidth="0dp">

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:padding="20dp"
        android:background="#FAFAFA">

        <!-- Header Row: Table Order + Status -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center_vertical" 
            android:layout_marginBottom="12dp">
            
            <!-- Coffee Icon + Table Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â˜•"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp"/>
                  <TextView 
                    android:id="@+id/orderId" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="Order" 
                    android:textSize="18sp" 
                    android:textStyle="bold"
                    android:textColor="#2E2E2E" 
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Status Badge -->
            <com.google.android.material.card.MaterialCardView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                app:cardCornerRadius="20dp" 
                app:cardElevation="0dp" 
                android:id="@+id/statusCard">
                
                <TextView 
                    android:id="@+id/orderStatus" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="PENDING" 
                    android:textSize="11sp" 
                    android:textStyle="bold" 
                    android:textColor="#FFFFFF" 
                    android:background="#FF9800" 
                    android:paddingStart="16dp" 
                    android:paddingEnd="16dp" 
                    android:paddingTop="6dp" 
                    android:paddingBottom="6dp"
                    android:textAllCaps="true"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Order Info Row -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center_vertical" 
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5"
            android:padding="12dp">

            <!-- Order ID -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="ðŸ†”" 
                    android:textSize="14sp" 
                    android:layout_marginEnd="6dp"/>

                <TextView 
                    android:id="@+id/orderIdDetail" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="ID: 12345678" 
                    android:textSize="13sp" 
                    android:textColor="#666666"
                    android:fontFamily="monospace"/>
            </LinearLayout>

            <!-- Total Price -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#E8F5E8"
                android:padding="8dp">
                
                <TextView 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="ï¿½" 
                    android:textSize="16sp" 
                    android:layout_marginEnd="4dp"/>
                
                <TextView 
                    android:id="@+id/totalPrice" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="45.00â‚¬" 
                    android:textSize="18sp" 
                    android:textStyle="bold" 
                    android:textColor="#D32F2F" 
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Customer Info -->
        <LinearLayout 
            android:id="@+id/customerLayout" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center_vertical" 
            android:layout_marginBottom="12dp" 
            android:visibility="gone"
            android:background="#FFF3E0"
            android:padding="12dp">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="ðŸ‘¤" 
                android:textSize="16sp" 
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView 
                    android:id="@+id/customerInfo" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="John Doe" 
                    android:textSize="15sp" 
                    android:textColor="#2E2E2E"
                    android:textStyle="bold"/>
                    
                <TextView 
                    android:id="@+id/customerPhone" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="ðŸ“ž 0123456789" 
                    android:textSize="13sp" 
                    android:textColor="#666666"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Order Note -->
        <LinearLayout 
            android:id="@+id/noteLayout" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="top" 
            android:layout_marginBottom="16dp" 
            android:visibility="gone"
            android:background="#F0F4C3"
            android:padding="12dp">

            <TextView 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="ðŸ’¬" 
                android:textSize="16sp" 
                android:layout_marginEnd="8dp" 
                android:layout_marginTop="2dp"/>

            <TextView 
                android:id="@+id/orderNote" 
                android:layout_width="0dp" 
                android:layout_height="wrap_content" 
                android:layout_weight="1" 
                android:text="Less sweet, extra ice" 
                android:textSize="14sp" 
                android:textColor="#5D4037" 
                android:fontStyle="italic" 
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

        <!-- Divider -->
        <View 
            android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:background="#E0E0E0" 
            android:layout_marginBottom="16dp"/>

        <!-- Action Buttons Row -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton 
                android:id="@+id/btnViewDetails" 
                android:layout_width="0dp" 
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="View Details" 
                android:textSize="14sp" 
                android:textColor="#1976D2" 
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#1976D2"
                app:cornerRadius="24dp"
                android:layout_marginEnd="8dp"/>

            <!-- Update Status Button -->
            <com.google.android.material.button.MaterialButton 
                android:id="@+id/btnUpdateStatus" 
                android:layout_width="0dp" 
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Update Status" 
                android:textSize="14sp" 
                android:textColor="#FFFFFF" 
                android:backgroundTint="#4CAF50" 
                app:cornerRadius="24dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>