            <com.google.android.material.card.MaterialCardView android:layout_width="wrap_content" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="0dp" android:id="@+id/statusCard">

                <TextView android:id="@+id/orderStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PENDING" android:textSize="12sp" android:textStyle="bold" android:textColor="#FFFFFF" android:background="#FF9800" android:paddingStart="12dp" android:paddingEnd="12dp" android:paddingTop="4dp" android:paddingBottom="4dp"/>
